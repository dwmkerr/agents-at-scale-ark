FROM python:3.12-slim

WORKDIR /app

{{ if eq .type "pyproject" -}}
# Install uv for fast Python package management
RUN pip install uv

# Copy project files
COPY pyproject.toml ./
COPY uv.lock* ./

# Install dependencies
RUN uv sync --frozen

# Copy source code
COPY . .

# Run the MCP server
CMD ["uv", "run", "python", "-m", "{{ .name }}"]
{{- else -}}
# Copy requirements
COPY requirements.txt ./

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY . .

# Run the MCP server
CMD ["python", "-m", "{{ .name }}"]
{{- end }}